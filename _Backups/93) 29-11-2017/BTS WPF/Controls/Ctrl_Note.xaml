<UserControl x:Class="BTS_WPF.Ctrl_Note"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BTS_WPF"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="120"
             >
    <Button Background="LightGoldenrodYellow" Click="EditNote_Click" Width="120" Height="120">
        <Grid Height="120" Width="120">
            <Label x:Name="Title" FontWeight="Bold">Title</Label>
        <TextBlock x:Name="Body" Grid.Row="1" TextWrapping="WrapWithOverflow" MaxHeight="110" Text="Body" TextTrimming="CharacterEllipsis" Margin="5,25,5,5"></TextBlock>
        
    </Grid>
    </Button>
</UserControl>
