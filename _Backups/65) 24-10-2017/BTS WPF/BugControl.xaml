<UserControl x:Class="BTS_WPF.BugControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BTS_WPF"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="400"
             >

    <Button Padding="0" Click="BugClicked" Width="400" Height="90" Margin="0,5,0,0">
    <Grid Background="PowderBlue" Width="400" Height="90" Margin="0" >
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="70"></RowDefinition>
        </Grid.RowDefinitions>
        <Label x:Name="BugTitle" Content="Bug Title" Style="{StaticResource Label_Title}"/>
        <Label Content="Severity:   " HorizontalAlignment="Right"/>
        <Label x:Name="Severity" Content="0" HorizontalAlignment="Right"/>
        <TextBlock x:Name="Description" Grid.Row="1" TextWrapping="WrapWithOverflow" MaxHeight="70" Text="No description found" Margin="10,0,10,20" TextTrimming="CharacterEllipsis"></TextBlock>
    </Grid>
    </Button>
</UserControl>
