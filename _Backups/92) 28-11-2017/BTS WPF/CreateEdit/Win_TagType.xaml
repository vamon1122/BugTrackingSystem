<Window x:Class="BTS_WPF.Win_TagType"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BTS_WPF"
        mc:Ignorable="d"
        Title="Create Tag" Height="189.743" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"></ColumnDefinition>
            <ColumnDefinition Width="185"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <Label Grid.Row="1" HorizontalAlignment="Right">Organisation</Label>
        <Label x:Name="OrganisationName" Grid.Row="1" Grid.Column="1"></Label>
        
        <Label Grid.Row="2" HorizontalAlignment="Right">Value</Label>
        <TextBox x:Name="TagTypeField" Grid.Row="2" Grid.Column="1"></TextBox>

        <Button Click="Click_CreateUpdateTag" Grid.Row="3" Grid.Column="1" Style="{StaticResource ButtonStyle}" Width="50" HorizontalAlignment="Right">Create</Button>
    </Grid>
</Window>
