<Window x:Class="BTS_WPF.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BTS_WPF"
        mc:Ignorable="d"
        Title="Home" Height="300" Width="507.692">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            
        </Grid.RowDefinitions>
        <ComboBox Grid.Column="0" Grid.Row ="0" x:Name="combo_ActiveOrg" Style="{StaticResource ComboStyle}">My Org</ComboBox>
        <Label Grid.Column="2" Grid.Row ="0" x:Name="label_ActiveUser" HorizontalAlignment="Right"></Label>
        <ComboBox Grid.Column="1" Grid.Row ="1" x:Name="combo_ActiveProduct" HorizontalAlignment="Right" Style="{StaticResource ComboStyle}">My Product</ComboBox>
        <TextBox x:Name="SearchBox" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Height="23" Style="{StaticResource TextBoxStyle}"/>
    </Grid>
</Window>
